@model Votingsystem.Models.Poll

@{
    ViewData["Title"] = "Confirm Your Vote";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card border-warning shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">Confirm Your Choice</h3>
                </div>
                <div class="card-body py-5">
                    <p class="text-muted">You are about to vote in:</p>
                    <h4 class="mb-4">@Model.Title</h4>

                    <p class="text-muted">Your selected candidate is:</p>
                    <h2 class="text-primary mb-5">@ViewBag.CandidateName</h2>

                    <div class="alert alert-secondary small">
                        Note: Once you click "Confirm and Cast Vote", you cannot change your choice.
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between bg-light">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="bi bi-arrow-left"></i> Change Selection
                    </a>

                    <form asp-action="CastVote" method="post">
                        <input type="hidden" name="pollId" value="@Model.Id" />
                        <input type="hidden" name="candidateId" value="@ViewBag.CandidateId" />
                        <button type="submit" class="btn btn-success">
                            Confirm and Cast Vote <i class="bi bi-check2-all"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
