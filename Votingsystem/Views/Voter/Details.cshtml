@model Votingsystem.Models.Poll

@{
    ViewData["Title"] = "Poll Details";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">@Model.Title</li>
        </ol>
    </nav>

    <div class="jumbotron p-4 p-md-5 text-white rounded bg-primary shadow">
        <h1 class="display-4">@Model.Title</h1>
        <p class="lead my-3">@Model.Description</p>
    </div>

    <h3 class="mt-5 mb-4 text-center">Select a Candidate</h3>

    <div class="row">
        @if (Model.Candidates == null || !Model.Candidates.Any())
        {
            <div class="col-12 text-center">
                <div class="alert alert-secondary">
                    No candidates have been registered for this election yet.
                </div>
            </div>
        }
        else
        {
            @foreach (var candidate in Model.Candidates)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="bi bi-person-circle display-1 text-secondary"></i>
                            </div>
                            <h4 class="card-title">@candidate.Name</h4>
                            <p class="card-text text-muted italic small">"@candidate.Manifesto"</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 pb-3">
                            <form asp-action="Preview" method="post">
                                <input type="hidden" name="pollId" value="@Model.Id" />
                                <input type="hidden" name="candidateId" value="@candidate.Id" />
                                @* <button type="submit" class="btn btn-success w-100 btn-lg">
                                    Vote for @candidate.Name
                                </button> *@
                                @if (ViewBag.HasVoted ?? false)
                                {
                                    <button class="btn btn-secondary w-100" disabled>Already Voted</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success w-100">Vote for @candidate.Name</button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
