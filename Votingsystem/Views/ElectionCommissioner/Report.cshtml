@model Votingsystem.Models.Poll

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Official Election Report</h2>
            <button onclick="window.print();" class="btn btn-light btn-sm d-print-none">
                <i class="bi bi-printer"></i> Print Report
            </button>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <h1>@Model.Title</h1>
                <p class="text-muted">Concluded on: @Model.EndDate.ToString("f")</p>
                <hr />
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Summary Statstics</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Total Votes Cast: <strong>@ViewBag.TotalVotes</strong></li>
                        <li class="list-group-item">Winner: <span class="badge bg-success">@ViewBag.Winner?.Name</span></li>
                    </ul>
                </div>
            </div>

            <h5>Candidate Breakdown</h5>
            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Candidate Name</th>
                        <th>Votes Received</th>
                        <th>Percentage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Candidates.OrderByDescending(x => x.VoteCount))
                    {
                        var percentage = ViewBag.TotalVotes > 0
                        ? (double)c.VoteCount / ViewBag.TotalVotes * 100
                        : 0;
                        <tr>
                            <td>@c.Name</td>
                            <td>@c.VoteCount</td>
                            <td>@percentage.ToString("F1")%</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center text-muted small">
            Generated by VotingSystem Portal on @DateTime.Now.ToString("g")
        </div>
    </div>
</div>
