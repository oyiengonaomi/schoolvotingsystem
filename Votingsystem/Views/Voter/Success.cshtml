@model Votingsystem.Models.Poll

@{
    ViewData["Title"] = "Vote Confirmed";
    int totalVotes = Model.Candidates.Sum(c => c.VoteCount);
}

<div class="container mt-5">
    <div class="text-center">
        <div class="display-1 text-success mb-4">
            <i class="bi bi-check-circle-fill"></i>
        </div>
        <h1 class="display-4">Vote Cast Successfully!</h1>
        <p class="lead">Thank you for participating in the <strong>@Model.Title</strong>.</p>
    </div>

    <div class="card shadow-sm mt-5">
        <div class="card-header bg-white">
            <h4 class="mb-0">Current Live Results</h4>
        </div>
        <div class="card-body">
            @foreach (var candidate in Model.Candidates.OrderByDescending(c => c.VoteCount))
            {
                // Calculate percentage for the progress bar
                double percentage = totalVotes > 0
                ? (double)candidate.VoteCount / totalVotes * 100
                : 0;

                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="fw-bold">@candidate.Name</span>
                        <span>@candidate.VoteCount Votes (@percentage.ToString("0.0")%)</span>
                    </div>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-info"
                             role="progressbar"
                             style="width: @percentage%"
                             aria-valuenow="@percentage"
                             aria-valuemin="0"
                             aria-valuemax="100">
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer text-center">
            <a asp-action="Dashboard" class="btn btn-primary">Back to Dashboard</a>
        </div>
    </div>
</div>
